<style>
    .container-opinions {
        margin: auto;
        width: 60vw;
        display: flex;
        flex-direction: column;
        row-gap: 5rem;
        /* padding-bottom: 10rem; */
        & h1 {
            font-size: 3rem;
            font-family: quicksand;
            width: 60vw;
            margin: auto;
            text-align: center;
        }

        & {
            font-size: 1.5rem;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .clients {
            display: grid;
            grid-template-columns: repeat(6, 1fr);
            grid-template-rows: repeat(2, 1fr);
            width: 60vw;
            margin-top: 2rem;
            height: calc(60vw / 2);
            align-items: center;
            gap: 3rem;

            & .item :first-child {
                width: 100%;
                background-size: cover;
                aspect-ratio: 1 / 1;
                background-position: center;
                background-repeat: no-repeat;
                border-radius: 50%;

                border: 3px solid #ff8038;
                box-shadow: 0 0 50px 1px #ff803880;
                transition: transform 0.3s ease-in-out;
            }

            & .item .opinion {
                padding: 0.3rem;
                background-color: #ff8038;
                position: relative;
                font-size: 0.9rem;
                z-index: 5;
                transform: scale(0);
                transition: transform 0.3s ease-in-out;

                &:before {
                    content: "";
                    position: absolute;
                    top: -20px;
                    left: 10px;
                    width: 30px;
                    height: 30px;
                    clip-path: polygon(100% 0, 0% 100%, 60% 100%);
                    background-color: #ff8038;
                }
            }

            & .item :first-child:hover {
                transform: scale(1.3);
            }

            & .item:hover .opinion {
                transform: scale(1);
            }

            & .item-1 {
                grid-column: 1;
                grid-row: span 2;
            }

            & .item-3 {
                grid-column: 2 span;
                grid-row: 2 span;
            }

            & .item-7 {
                grid-column: 6;
                grid-row: 1/ 2 span;
            }
        }

        & p {
            border: 1px solid #ff8038;
            padding: 1.5rem;
            position: relative;
            &:after {
                content: "";
                position: absolute;
                width: 100%;
                height: 100%;
                border: 1px solid #ff8038;
                top: 5px;
                left: 5px;
            }
        }
    }
</style>
